{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
            	"ec2:RunInstances",
                "ec2:StopInstances",
                "ec2:StartInstances",
                "ec2:Describe*"
            ],
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "ec2:ResourceTags/scheduler": "true"
                }
            }
        }
    ]
}